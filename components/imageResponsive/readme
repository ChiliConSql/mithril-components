/**
 * Mithril.js integration to http://scottjehl.github.com/picturefill/
 * a responsive image polyfill for <picture>, srcset, sizes, and more.
 *
 * new mc.ImageResponsive.controller(sources, img)
 *   {array} sources: alternative images to display
 *             { srcset: 'images/extralarge.jpg', media: '(min-width: 1000px)' }
 *             See scottjehl.github.io/picturefill/ for details.
 *   {obj}   img: base image
 *             { srcset: "images/medium.jpg", alt: 'alt desc' }
 *             See scottjehl.github.io/picturefill/ for details.
 *
 * mc.ImageResponsive.view(ctrl, overrides)
 *   {obj} ctrl: image's controller.
 *   {obj} overrides: override ctrl's values. Optional.
 *           { sources:..., img:... }
 *           Use these values instead of ctrl's.
 *
 * You can read more about <picture> at
 * - http://scottjehl.github.io/picturefill/
 * - http://picture.responsiveimages.org/
 *
 * SAMPLE USAGE ================================================================

    <script src="js/vendor/mithril.js"></script>
    <script src ="js/vendor/picturefill.js"></script>
    <script src="../components/imageResponsive/imageResponsive.js"></script>

    var sources = [
      { srcset: "images/extralarge.jpg", media: "(min-width: 1000px)" },
      { srcset: "images/large.jpg", media: "(min-width: 800px)" },
      { srcset: "images/medium.jpg" }
    ];

    var img = {
      srcset: "images/medium.jpg",
      alt: "A giant stone face at The Bayon temple in Angkor Thom, Cambodia"
    };

    var app = {
      controller: function () {
        // options provided when component is instantiated
        this.image1 = new mc.ImageResponsive.controller(sources, img);
        // options will be provided when component is rendered
        this.image2 = new mc.ImageResponsive.controller();
      },

      view: function (ctrl) {
        return [
          m('div', mc.ImageResponsive.view(ctrl.image1)),
          m('div', mc.ImageResponsive.view(ctrl.image2, { sources: sources, img: img }))
        ];
      }
    };

    m.module(document.body, app);
 */