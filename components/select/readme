/**
 * A simple select.
 * The options may be provided either when controller is instantiated,
 * or when the component is rendered.
 *
 * new mc.Select.controller(value, options, caption)
 *   {*}   value: the value to show as selected. May be {str} or m.prop(). Optional.
 *   {obj} options: { value1: legend1, value2: legend2, ... }
 *           {str} value: the value returned for this option.
 *           {str} legend: the text for the option.
 *   {str} caption: the caption to display as the first option. Optional.
 *
 * mc.Select.view(ctrl, options)
 *   {obj} ctrl: select's controller.
 *   {obj} options: { options:..., caption:..., selector:..., attrs:... }
 *           Options overriding controller's options and more. Optional.
 *           {obj} options: overrides controller's options. Optional.
 *           {str} caption: overrides controller's caption. Optional.
 *           {str} selector: tag selector string for <select>. Optional.
 *           {obj} attrs: attr object for <select>. Optional.
 *
 * SAMPLE USAGE ================================================================

    <script src="js/vendor/mithril.js"></script>
    <script src="../components/select/select.js"></script>

    var app = {
      car: m.prop('saab'),
      race: m.prop(null),

      controller: function () {
        var options1 = {
          'volvo' : 'Volvo',
          'saab' : 'Saab',
          'mercedes' : 'Mercedes',
          'audi' : 'Audi'
        };

        // options provided when select controlled is instantiated
        this.select1 = new mc.Select.controller(app.car, options1, 'Choose a car');

        // options will be provided when select component is rendered
        this.select2 = new mc.Select.controller(app.race, null, 'Choose a race');
      },

      view: function (ctrl) {
        var options2 = {
          'undead' : 'Undead',
          'orc' : 'Orc',
          'human': 'Human',
          'dwarf': 'Dwarf'
        };

        return m('div', [
          mc.Select.view(ctrl.select1),
          mc.Select.view(ctrl.select2, { options: options2 }),
          m('div', {}, app.car() || 'no car selected'),
          m('div', {}, app.race() || 'no race selected')
        ]);
      }
    };

    m.module(document.body, app);
 */